<% form_for([@band, @release], :html => {:multipart => true}) do |f| %> 
  <%= f.error_messages %>

  <table class="form">
    <tr>
      <td>
        <%= field_label "release.title" %><br />
        <%= f.text_field :title %>
      </td>
      <td>
        <%= field_label "release.year" %><br />
        <%= f.text_field :year, :size => 10, :maxlength => 4 %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= field_label "release.details" %><br />
        <%= f.text_area :details, :cols => 52 %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= field_label "release.cover" %><br />
        
        <% if @release.cover %>
          <%= link_to("Capa atual", @release.cover.public_filename) %> | 
           <%= 
           link_to (
            "Remover capa",
              {
                :controller=>"releases",
                :action=>"destroy_cover",
                :id => @release,
                :band_id =>@release.band,
                :confirm => 'VocÃª tem certeza?', 
              })
          %>
          <br />
        <% end %>
         
        <%= file_field :cover, :uploaded_data %>
      </td>
    <tr>
  </table>
  <br />
  <%= f.submit 'Salvar' %>
  </p>
<% end %>

<%= corner "content" %>

<h1>Gêneros</h1>

<div class="direita">
  <%= link_to 'Cadastrar um novo gênero', new_genre_path %>
</div>

<br/>

<div id="content" class="content">
  <% if @genres.size > 0 %>
    <% @genres.each do |genre| %>
      <p>
        <%=h genre.title %> | 
        <%= link_to 'Remover', genre, :confirm => 'Você tem certeza?', :method => :delete %>
      </p>
    <% end %>
  <% else %>
    <center>
      <em>
        Nenhum gênero encontrado.
      </em>
    </center>
  <% end %>
</div>


<h1>Editar a sua conta</h1>

<% form_for resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put } do |f| -%>
  <%= f.error_messages %>
  <table class="form">
    <tr>
      <td>
        <%= f.label 'E-mail' %><br/>
        <%= f.text_field :email %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label 'Nova senha' %><br/>
        <%= f.password_field :password %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label 'Confirmação da nova senha' %><br/>
        <%= f.password_field :password_confirmation %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label '', 'Senha atual', :title => 'Nós precisamos saber sua senha atual para confirmar suas mudanças' %><br/>
        <%= f.password_field :current_password %>
      </td>
    </tr>
  </table>
  
  <br/>
  <%= f.submit "Editar" %>
<% end -%>

<p>Insatisfeito? <%= link_to "Cancelar a conta", registration_path(resource_name), :confirm => "Você tem certeza?", :method => :delete %>.</p>

<br/>

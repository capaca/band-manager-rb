<h2>Editar conta <%= resource_name.to_s.humanize %></h2>

<% form_for resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put } do |f| -%>
  <%= f.error_messages %>

  <table class="form">
    <tr>
      <td>
        <%= f.label 'E-mail' %><br/>
        <%= f.text_field :email %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label 'Senha' %><br/>
        <%= f.password_field :password %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label 'Confirmação da senha' %><br/>
        <%= f.password_field :password_confirmation %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label 'Senha atual' %>
        <i>(nós precisamos saber sua senha atual para confirmar suas mudanças.)</i><br/>
        <%= f.password_field :current_password %>
      </td>
    </tr>
  </table>
  
  <br/>
  <%= f.submit "Editar" %>
<% end -%>

<h3>Cancel my account</h3>

<p>Insatisfeito? <%= link_to "Cancelar a minha conta", registration_path(resource_name), :confirm => "Você tem certeza?", :method => :delete %>.</p>


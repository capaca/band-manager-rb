<h1>Logar</h1>

<% form_for resource_name, resource, :url => session_path(resource_name) do |f| -%>
<table class="form">
  <tr>
    <td>
      <%= f.label 'E-mail' %><br/>
      <%= f.text_field :email %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label 'Senha' %><br/>
      <%= f.password_field :password %>
    </td>
  </tr>
  <% if devise_mapping.rememberable? %>
    <tr>
      <td>
        <%= f.check_box :remember_me %> <%= f.label 'Lembre-se de mim' %>
      </td>
    </tr>
  <% end %>
</table>

<p>
  <%= f.submit "Logar" %>
</p>
<% end -%>

<%= render :partial => "shared/devise_links" %>

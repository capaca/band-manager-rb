<div id="header-wrapper">
	<div id="header">
		<div id="menu">
    
		<% if user_signed_in? %>
			<ul> 
				<% if current_user.may_configurate? %>
			    <li class="<%= check_tab "configuration" %>">
				    <%= link_to "Configuração", "/admin/configuration/edit" %>
				  </li>
				<% end %>

			  <% if current_user.may_manage_users? %>
			    <li class="<%= check_tab "users" %>">
				    <%= link_to "Usuários", admin_users_path %>
				  </li>
				<% end %>
				
				<li class="<%= check_tab "bands" %>">
				  <%= link_to "Bandas", admin_bands_path %>
				</li>
				
				<li class="<%= check_tab "genres" %>">
				  <%= link_to "Gêneros", admin_genres_path %>
				</li>
				
				<li class="<%= check_tab "countries" %>">
				  <%= link_to "Países", admin_countries_path %>
				</li>
			</ul>
		<% end %>
		</div>
		
		<% if user_signed_in? %>
		  <div id="user">
			  <%= link_to 'Editar Perfil', :controller => "/users", :action => :edit %> | 
			  <%= link_to 'Sair', :controller => "/users", :action => :sign_out %>
		  </div>
	  <% end %>
	</div>
	<!-- end #header -->
</div>
<!-- end #header-wrapper -->

<% form_for([@band, @post]) do |f| %>
  <%= f.error_messages %>

  <table class="form" width="95%">
    <tr>
      <td>
        <%= f.label "Título (Português)" %><br />
        <%= f.text_field :title_pt_BR, :style => "width: 100%;" %><br/><br/>
        
        <%= f.label "Título (English)" %><br />
        <%= f.text_field :title_en, :style => "width: 100%;" %><br/><br/>
        
        <%= f.label "Título (Español)" %><br />
        <%= f.text_field :title_es, :style => "width: 100%;" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label "Conteúdo (Português)" %><br />
        <%= f.text_area :content_pt_BR, :class => 'ckeditor' %><br/>
        
        <%= f.label "Conteúdo (English)" %><br />
        <%= f.text_area :content_en, :class => 'ckeditor' %><br/>
        
        <%= f.label "Conteúdo (Español)" %><br />
        <%= f.text_area :content_es, :class => 'ckeditor' %><br/>
      </td>
    </tr>
  </table>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>


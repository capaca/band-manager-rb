<% form_for([@band, @post]) do |f| %>
  <%= f.error_messages %>

  <table class="form">
    <tr>
      <td>
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :content %><br />
        <%= f.text_area :content %>
      </td>
    </tr>
  </table>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>


<% form_for([@band, @post]) do |f| %>
  <%= f.error_messages %>

  <table class="form" width="95%">
    <tr>
      <td>
        <%= field_label "post.title" %><br />
        <%= f.text_field :title, :style => "width: 100%;" %>
      </td>
    </tr>
    <tr>
      <td>
        <%= field_label "post.content" %><br />
        <%= f.text_area :content, :class => 'ckeditor' %>
      </td>
    </tr>
  </table>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>


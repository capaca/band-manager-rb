<% form_for([@band, @post]) do |f| %>
  <%= f.error_messages %>

  <table class="form" width="60%">
    <tr>
      <td>
        <%= field_label "post.title" %><br />
        <%= f.text_field :title %>
      </td>
    </tr>
    <tr>
      <td>
        <%= field_label "post.content" %><br />
        <%= f.text_area :content %>
      </td>
    </tr>
  </table>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>


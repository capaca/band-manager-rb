      <span class="date">
        <%=h post.created_at.strftime("%d/%m/%Y") %>
      </span>
    </div>
      
    <div class="content"><%= truncate(strip_html(post.content), :length => 200) %></div>
    <div class="more">
      | <%= link_to 'Editar', edit_band_post_path(@band, post) %> 

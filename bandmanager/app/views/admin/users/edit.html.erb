<h1>Editar conta de usuário</h1>

<% form_for([:admin,@user]) do |f| %>
  <%= f.error_messages %>
  <table class="form">
    <tr>
      <td>
        <%= f.label 'E-mail' %><br/>
        <%= f.text_field :email %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label 'Nova senha' %><br/>
        <%= f.password_field :password %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label 'Confirmação da nova senha' %><br/>
        <%= f.password_field :password_confirmation %>
      </td>
    </tr>
  </table>
  
  <br/>
  <%= f.submit "Editar" %>
<% end %>

<p>
  <%= link_to 'Voltar', admin_users_path %>
</p>


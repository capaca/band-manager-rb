<%= corner "content" %>
<h1>Bandas</h1>

<div class="direita">
  <%= link_to 'Cadastrar uma nova banda', new_band_path %>
</div>

<br/>

<div class="content" id="content">
  <% if @bands.size > 0 %>
    <% @bands.each_with_index do |band, index| %>
      <div class="banda">
        <h2>
          <%= link_to band.name, band %>
        </h2>
        
        <%= field_label "band.genre"%> <%= band.genre.title %> <br/>    
         <%= field_label "band.origin"%> <%= band.city %>/<%= band.country.name %>
        
        <p>
          <%= band.about %>      
        </p>
      </div>
    <% end %>
  <% else %>
    <center>
      <em>Nenhuma banda encontrada.</em>
    </center>
  <% end %>
</div>


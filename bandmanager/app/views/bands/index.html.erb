<%= corner "content" %>
<h1>Bandas</h1>

<div class="direita">
  <%= link_to 'Cadastrar uma nova banda', new_band_path %>
</div>

<br/>

<div class="content" id="content">
  <% if @bands.size > 0 %>
    <% @bands.each_with_index do |band, index| %>
      <div class="banda">
        <h2>
          <%= link_to band.name, band %>
        </h2>
        
        <p>
          <%= field_label "band.genre" %>
          <%=h band.genre.title %>
        </p>
          
        <p>
          <%= field_label "band.origin" %>
          <%=h band.city %>/<%=h band.country.name %>
        </p>

        <p>
          <%= field_label "band.year" %>
          <%=h band.year %>
        </p>
        
        <div class="sobre">
          <% if band.picture %>
            <%= link_to image_tag(band.picture.public_filename(:thumb), :align => :left), 
                        band.picture.public_filename %>
          <% end %>
          <%= band.about %>      
        </div>
        <div style="clear: both"></div>
        
        <br />
      </div>
    <% end %>
  <% else %>
    <center>
      <em>Nenhuma banda encontrada.</em>
    </center>
  <% end %>
</div>


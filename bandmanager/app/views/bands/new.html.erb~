<h1>New band</h1>

<% form_for(@band) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= f.select :genre_id, @genres.map{|genre| [genre.title, genre.id] }, 
				             :include_blank => '-- escolha o estilo --' %>
  </p>
  <p>
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :country %><br />
    <% if @countries %>
      <%= f.select :country_id, @countries.map{|country| [country.name, country.id] }, 
				             :include_blank => '-- escolha o paÃ­s --' %>
    <% end %>
  </p>
  <p>
    <%= f.label :about %><br />
    <%= f.text_area :about %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', bands_path %>

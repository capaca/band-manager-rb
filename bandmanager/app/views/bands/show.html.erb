<%= corner "content", "sub_menu"%>

<h1><%= @band.name %></h1>

<!--
<div id="sub_menu">
  <a href="#info">Info</a> | 
  <a href="#concerts">Shows</a> | 
  <a href="#releases">Lançamentos</a> | 
</div>
-->

<div class="content detalhes" id="content">
  
  <a name="band_info"></a>
  <% if @band.logo.exists? %>
    <div class="logo center">
      <%= image_tag @band.logo.url(:normal) %>
    </div>
  <% end %>

  <br/>

  <% if @band.photo.exists? %>
    <%= image_tag @band.photo.url(:normal), :align => 'left', :class => 'photo' %>
  <% end %>

  <div class="sobre">
    <%= field_label "band.genre" %>
    <%=h @band.genre.title %><br/>
  
    <%= field_label "band.origin" %>
    <%=h @band.city %>/<%=h @band.country.name %><br/>

    <%= field_label "band.year" %>
    <%=h @band.year %><br/>
    
    <div style="text-align: justify;"><%=simple_format @band.about %></div>
  </div>
  <div style="clear: both"></div>
  
  <br />
  
  <div class="opcoes">
    <%= link_to 'Editar', edit_band_path(@band) %> |
    <%= link_to 'Excluir', @band, :confirm => 'Você tem certeza?', :method => :delete %>
  </div>
  
  <br />

  <a name="posts">
    <h2>Blog</h2>
  </a>  
  
  <div class="direita">
    <%= link_to 'Fazer um novo post', new_band_post_path(@band) %>
  </div>
  
  <%= render :partial => 'posts/list', :locals => {:posts => @band.posts}%>

  <a name="concerts">
    <h2>Próximos shows</h2>
  </a>  
  
  <div class="direita">
    <%= link_to 'Cadastrar um novo show', new_band_concert_path(@band) %>
  </div>
  
  <%= render :partial => 'concerts/list', :locals => {:band => @band, :concerts => @band.upcoming_concerts}%>
  
  <% if @band.has_past_concerts? %>
    <br/>
    <div class="direita">
      <%= link_to 'Ver todos os shows', band_concerts_path(@band) %>
    </div>
  <% end %>
  
  <br />
  
  <a name="releases">
    <h2>Lançamentos</h2>
  </a>
  
  <div class="direita">
    <%= link_to 'Cadastrar um novo lançamento', new_band_release_path(@band) %>
  </div>
  
  <%= render :partial => 'releases/list', :locals => {:releases => @band.releases}%>

  <br />
  
    
</div>

<br/>
<div class="opcoes centro">
  <%= link_to 'Voltar', bands_path %>
</div>


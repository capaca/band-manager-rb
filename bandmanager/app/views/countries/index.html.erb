<%= corner "content" %>

<h1>Países</h1>

<div class="direita">
  <%= link_to 'Cadastrar um novo país', new_country_path %>
</div>

<br/>

<div id="content" class="content">
<% if @countries.size > 0 %>
  <% @countries.each do |country| %>
    <%=h country.name %> | 
    <%= link_to 'Remover', country, :confirm => 'Você tem certeza?', :method => :delete %>
  <% end %>
<% else %>
  <center>
    <em>
      Nenhum país encontrado.
    </em>
  </center>
<% end %>
</div>
